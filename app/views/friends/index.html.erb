<% if user_signed_in?%>
  <h1>Friend List</h1>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th># ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user  %>
            <tr>
              <td><%= friend.user_id %></td>
              <td>
                <%= link_to friend.first_name + ' ' + friend.last_name , friend %>
              </td>
              <td><%= friend.email %></td>
              <td><%= friend.phone %></td>
              <td><%= friend.twitter %></td>
              <td>
                <div class="btn-group">
                  <%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-warning btn-sm" %>
                  <%= link_to 'Remove', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm', remote: true, 'data-confirm-reload': 'true' %>
                </div>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <%= link_to 'New Friend', new_friend_path, class: "btn btn-dark" %>
<% else %>
  <h1>Hello world</h1>
<% end %>
