<h1>Friend List</h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th># ID</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>Actions</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.user_id %></td>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td>
            <div class="btn-group">
              <%= link_to 'Show', friend, class: "btn btn-primary" %>
              <%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-warning" %>
              <%= link_to 'Remove', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', remote: true, 'data-confirm-reload': 'true' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to 'New Friend', new_friend_path, class: "btn btn-dark" %>
