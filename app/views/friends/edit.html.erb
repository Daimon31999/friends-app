<h1>Editing Friend</h1>
<br />
<%= render 'form', friend: @friend %>
<div class="mt-3">
  <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
  <%= link_to 'Show', @friend, class:"btn btn-secondary" %>
  <%= link_to 'Remove', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', remote: true, 'data-confirm-reload': 'true' %>
</div>
